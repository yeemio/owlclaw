  - name: skill_name
    type: str
    description: Skill display name
    required: true
  - name: skill_description
    type: str
    description: Brief description of webhook handling purpose
    required: true
  - name: webhook_path
    type: str
    description: Webhook path or route (e.g. /webhooks/orders, /events)
    required: true
  - name: payload_format
    type: str
    description: Payload format (e.g. json, form, raw)
    default: "json"
  - name: validation
    type: str
    description: Validation rule or secret header name for signature verification
    default: ""
